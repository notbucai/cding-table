{
 "compilerOptions": {
   "module": "ESNext",
   "declaration": true,
   "noImplicitAny": false,
   "removeComments": true,
   "moduleResolution": "node",
   "esModuleInterop": true,
   "jsx": "preserve",
   "noLib": false,
   "resolveJsonModule": true,
   "target": "es6",
   "sourceMap": true,
   "outDir": "./lib",
   "allowJs": true,
   "lib": [
     "ESNext", "DOM"
   ],
   "allowSyntheticDefaultImports": true
 },
 "exclude": [
   "lib",
   "dist",
   "coverage",
   "node_modules"
 ]
}
